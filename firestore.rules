rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads/writes
    // match /{document=**} {
    //   allow read, write: if false;
    // }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow anyone authenticated to read any user profile (for discovery features)
      // This is necessary for students to find alumni and vice-versa.
      allow read: if request.auth != null;

      // Allow a user to create their *own* profile document during signup/setup.
      // Ensure the document ID matches the authenticated user's UID.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow a user to update *only their own* profile document.
      // Ensure the document ID matches the authenticated user's UID.
      // Consider adding specific field validation later if needed (e.g., prevent changing userType).
      allow update: if request.auth != null && request.auth.uid == userId;

      // Disallow direct deletion of user profiles for now.
      allow delete: if false;
    }
  }
}
