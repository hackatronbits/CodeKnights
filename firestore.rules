
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection Rules
    match /users/{userId} {
      // Allow anyone to read user profiles (public data) if they are authenticated
      // Adjust specific fields if needed for privacy (e.g., hide email, contactNo)
      // For simplicity, allowing read of the whole document if authenticated.
      allow read: if request.auth != null;

      // Allow users to create their own user document upon signup/profile setup
      // Ensure the data being written matches the userId of the authenticated user.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update ONLY their own user document
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Generally, disallow delete unless specifically required by application logic
      allow delete: if false; 
    }

    // Add rules for other collections if they exist (e.g., conversations, resources)
    // match /conversations/{conversationId} {
    //   // Example: Allow read/write only to participants of the conversation
    //   allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
    // }
  }
}
